{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "incremental": true,
    "module": "commonjs",
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es2017"
  },
  "include": [
    "src/**/*",
    "**/*.hbs"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}